
.hover-class{
  background: #f6f6f6 !important;
}

.authorize-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 5000;
}

.authorize-box {
  position: fixed;
  top: 46%;
  left: 50%;
  width: 80%;
  margin: 0 auto;
  border-radius: 12rpx;
  background: #fff;
  transform: translate(-50%, -50%);
}

.authorize-box .title {
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  color: #333;
}

.authorize-box .msg {
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  line-height: 1.4;
  color: #888;
}

.authorize-box .btns {
  display: flex;
  align-content: center;
  text-align: center;
  border-top: 1rpx solid #eee;
  margin-top: 40rpx;
}

.authorize-box .btns .btn{
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #888;
  background: #fff;
  border-radius: 12rpx;
}

.authorize-box .btns .confirm-btn{
  color: #b69138;
  position: relative;
}

.authorize-box .btns .confirm-btn::before{
  content: ' ';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  border-left: 1rpx solid #eee;
}



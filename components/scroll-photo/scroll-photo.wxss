/* 图片滚动 */

.color-guide {
  display: flex;
}

.color-guide .label {
  width: 95rpx;
  font-size: 22rpx;
  color: #cca955;
}

.scroll-photo {
  padding: 20rpx 20rpx 0;
}

.scroll-photo  .scroll-photo_header {
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scroll-photo  .scroll-photo_header .scroll-photo_year {
  padding: 2rpx 0;
  padding-right: 12rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 1;
  background: #e0cb99;
  border-radius: 0 8px 8px 0;
}

.scroll-photo .scroll-photo_header .scroll-photo_intro {
  font-size: 28rpx;
  padding: 4rpx 30rpx;
  line-height: 1;
  background: #cca955;
  border-radius: 20px;
  color: #fff;
}

.scroll-photo .scroll-photo_content {
  height: 460rpx;
}

.scroll-photo .scroll-photo_content .scroll-photo_list {
  position: relative;
  border-bottom: 1px solid #fff;
}

.scroll-photo .scroll-photo_content  .scroll-photo_list .scroll-photo_date {
  float: left;
  font-size: 22rpx;
  color: #cca955;
}

.scroll-photo .scroll-photo_content  .scroll-photo_list .scroll-photo_img-wrap {
  position: relative;
  height: 40px;
  margin-left: 85rpx;
  overflow: hidden;
}

.scroll-photo .scroll-photo_content  .scroll-photo_list .image {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40px !important;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_time,
.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state {
  position: absolute;
  width: 110rpx;
  height: 40px;
  box-sizing: border-box;
  padding-left: 20rpx;
  line-height: 40px;
  font-size: 28rpx;
  color: #fff;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state {
  font-size: 24rpx;
  top: 0;
  right: 0;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_state text {
  color: #fff;
}

.scroll-photo .scroll-photo_content .scroll-photo_list .scroll-photo_time {
  top: 0;
  left: 85rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
}

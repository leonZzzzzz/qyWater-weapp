@import "iconfont.wxss";

/*重写样式*/

button::after {
  display: none;
}

/*背景图片*/

.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.switch-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  background: #fff;
}

.switch-wrap .label {
  font-size: 30rpx;
}

.switch-wrap .label .icon {
  display: inline-block;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #ffcae8;
}

/* 滑动切换 s*/

.swiper-wrap {
  position: relative;
  width: 100%;
}

.swiper-wrap .swiper-wrap_btn {
  position: absolute;
  top: 60rpx;
  font-size: 64rpx;
  color: #d8d8d8;
  z-index:1000;
}

.swiper-wrap .swiper-wrap_btn--left {
  left: 30rpx;
}
.swiper-wrap .swiper-wrap_btn--right {
  right: 30rpx;
}

.wx-swiper {
  width: 100%;
  height: 175rpx;
}

.wx-swiper .wx-swiper--item {
  text-align: center;
}

.wx-swiper .wx-swiper--item .title {
  margin-top: 44rpx;
  font-size: 34rpx;
  color: #e1738f;
}

.wx-swiper .wx-swiper--item .explain {
  margin-top: 2px;
  font-size: 26rpx;
  color: #eb94a9;
}

/* 底部按钮块 */

.common-footer-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 240rpx;
  background: #f2f2f2;
  text-align: center;
  font-size: 32rpx;
}

.common-footer-btn .btn-wrap {
  margin-right: 88rpx;
}

.common-footer-btn .btn-wrap:last-child {
  margin-right: 0;
}

.common-footer-btn .btn-wrap .iconfont {
  margin: 0 auto;
  border-radius: 50%;
  background: #cca955;
}

.common-footer-btn .btn-wrap .iconfont.iconfont--small {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.common-footer-btn .btn-wrap .iconfont.iconfont--big {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.common-footer-btn .btn-wrap .iconfont .icon {
  font-size: 44rpx;
  color: #fff;
}

.common-footer-btn .btn-wrap .text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #cca955;
}

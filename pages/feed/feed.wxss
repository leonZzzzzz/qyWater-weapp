.con{
  margin:30rpx;
}
.keyword{
  display:flex;
  flex-wrap: wrap;
  margin:30rpx 0;
}
.keyword>text{
  border:1px solid #eee;
  color:rgb(56, 55, 55);
  padding:10rpx 20rpx;
  margin-right:15rpx;
  border-radius: 40rpx;
  font-size:28rpx;
  margin-bottom:20rpx
}
.back{
  background: #089745;
  color: #fff !important;
  border: 1px solid #089745
}
textarea{
  background: rgb(247,247,247);
  margin-top: 20rpx;
  width: 650rpx;
  padding: 20rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.picimg{
  display:flex;
  flex-wrap: wrap;
  /* margin-right:15rpx; */
}
.picimg>image{
  width:160rpx;height:160rpx;margin-top:10rpx;
}
.pics{
  margin-right:15rpx;margin-top:10rpx;position:relative;width:160rpx;height:160rpx;
}
.picimg>.pics:nth-child(4),.picimg>.pics:nth-child(8){
  margin-right:0rpx !important;
}
.content{
  margin-top:40rpx;
  border-top: 1px solid #eee;
}
.conrow{
  display:flex;
  padding:20rpx 0;
  border-bottom:1px solid #eee;
}
.conrow>.one{
  color:rgb(8,151,69);
  font-size:40rpx;
  margin-top:10rpx;
}
.conrow>view>.two{
  color:#999;
  font-size:26rpx;
  margin-top:15rpx
}
.feedpeo{
  margin:0 20rpx;
  margin-top:10rpx;
  width:150rpx;
}
.conrow>input{
  margin-top:10rpx;
  width:430rpx;
}
.conrow>view>input{
  margin-top:10rpx;
  width:430rpx;
}
.btn{
  position:fixed;
  bottom:120rpx;
  background:rgb(8,151,69);
  color:#fff;
  padding:20rpx 0;
  width:690rpx;
  left:30rpx;
  text-align: center;
  border-radius: 10rpx;
  margin:0 auto;
  z-index:10
}
picker{
  width: 430rpx;
  margin-top: 10rpx;
}
.botm{
  background: #fff;
    z-index: 8;
    width: 100%;
    height: 200rpx;
    position: fixed;
    bottom: 0rpx;
}